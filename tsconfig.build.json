{
	"compilerOptions": {
		"noImplicitAny": true,
		"module": "Node16",
		"target": "ES2020",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"lib": ["es2020", "DOM"],
		"types": ["node"],
		"baseUrl": "./packages"
	},
	"ts-node": {
		"compilerOptions": {
			"module": "Node16"
		},
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"exclude": ["test.js", "dist", "**/*.spec.ts", "test", "**/env.template.ts"]
}